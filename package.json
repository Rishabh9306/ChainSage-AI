{
  "name": "chainsage-ai",
  "version": "1.0.0",
  "description": "AI-powered blockchain intelligence suite combining Hardhat 3 simulation with Blockscout MCP analysis",
  "main": "dist/index.js",
  "bin": {
    "chainsage": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "dev": "ts-node src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "setup": "node scripts/setup.js",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true}); require('fs').rmSync('coverage', {recursive:true, force:true}); require('fs').rmSync('.hardhat', {recursive:true, force:true}); require('fs').rmSync('cache', {recursive:true, force:true}); require('fs').rmSync('artifacts', {recursive:true, force:true});\"",
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "hardhat:node": "hardhat node",
    "hardhat:test": "hardhat test",
    "prepublishOnly": "npm run build",
    "preinstall": "npx only-allow npm"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "hardhat3",
    "blockscout",
    "mcp",
    "ai",
    "llm",
    "smart-contracts",
    "solidity",
    "analysis",
    "simulation"
  ],
  "author": "ChainSage AI Contributors",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "ora": "^5.4.1",
    "table": "^6.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chainsage-ai.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/chainsage-ai/issues"
  },
  "homepage": "https://github.com/yourusername/chainsage-ai#readme"
}
