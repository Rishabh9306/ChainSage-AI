# ===============================================
# ChainSage AI - Environment Configuration
# ===============================================
# Copy this file to .env and fill in your values

# ===============================================
# Blockchain Network Configuration
# ===============================================

# Ethereum Mainnet
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MAINNET_CHAIN_ID=1

# Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
SEPOLIA_CHAIN_ID=11155111

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
OPTIMISM_CHAIN_ID=10

# Base
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BASE_CHAIN_ID=8453

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ARBITRUM_CHAIN_ID=42161

# ===============================================
# Blockscout MCP Configuration
# ===============================================

BLOCKSCOUT_MCP_URL=https://mcp.blockscout.com
BLOCKSCOUT_API_KEY=your_blockscout_api_key_here

# Optional: Custom Blockscout instance
# BLOCKSCOUT_CUSTOM_URL=https://your-custom-blockscout.com

# ===============================================
# API Keys for Block Explorers
# ===============================================

ETHERSCAN_API_KEY=your_etherscan_api_key
OPTIMISM_ETHERSCAN_API_KEY=your_optimistic_etherscan_key
ARBISCAN_API_KEY=your_arbiscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# ===============================================
# LLM / AI Configuration
# ===============================================

# LLM Provider: openai, anthropic, deepseek, ollama
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (if using Claude)
# ANTHROPIC_API_KEY=your_anthropic_key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# DeepSeek Configuration
# DEEPSEEK_API_KEY=your_deepseek_key
# DEEPSEEK_MODEL=deepseek-coder

# Ollama Configuration (for local models)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# ===============================================
# Hardhat Configuration
# ===============================================

# Default network for Hardhat operations
HARDHAT_NETWORK=sepolia

# Private keys (NEVER commit these!)
# Format: comma-separated list of private keys
# PRIVATE_KEYS=0xYOUR_PRIVATE_KEY_1,0xYOUR_PRIVATE_KEY_2

# Deployment account private key
# DEPLOYER_PRIVATE_KEY=0xYOUR_DEPLOYER_PRIVATE_KEY

# ===============================================
# Application Settings
# ===============================================

# Logging level: debug, info, warn, error
LOG_LEVEL=info

# Cache TTL in seconds (default: 900 = 15 minutes)
CACHE_TTL=900

# Enable/disable caching
ENABLE_CACHE=true

# Maximum number of transactions to fetch
MAX_TRANSACTIONS=100

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# ===============================================
# Optional: Database Configuration (Future)
# ===============================================

# DATABASE_URL=postgresql://user:password@localhost:5432/chainsage
# REDIS_URL=redis://localhost:6379

# ===============================================
# Optional: Web UI Configuration (Future)
# ===============================================

# PORT=3000
# HOST=localhost
# CORS_ORIGIN=http://localhost:3000
